<h2 class="category-heading">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-body">
  <div class="field">
    <%= f.label :email, class: "form-text" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "form-text" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-field" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "submit-btn" %>
  </div>
</div>

<% end %>

<%= render "devise/shared/links" %>
