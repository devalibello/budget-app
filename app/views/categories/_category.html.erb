<div id="<%= dom_id category %>">
  <%= link_to category_payments_path(category) do %>
  <section class="category-section">
    <div class="icon-section">
      <%= image_tag category.icon, class: "icon-section" %>
    </div>
  
    <div class="name-section">
      <div class="name">
        <%= category.name %>
      </div>
      <div class="time">
        <%= category.created_at.strftime("%d %B %Y at %I:%M %p") %>
      </div>
    </div>

    <div class="total">
      <% total = 0 %>
      <% category.payments.each do |payment| %>
        <% total = total + payment.amount %>
      <% end %>
      <%= "$#{total}" %>
    </div>
    
  </section>
  <% end %>

</div>
