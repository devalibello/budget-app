<div class="log-out-section">
  <div class= 'bars'>
    <span class= 'bar'></span>
    <span class= 'bar'></span>
    <span class= 'bar'></span>
  </div>
  <h1 class="category-log-out">CATEGORY</h1>
  <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "log-out" %>
</div>

<div class="gift-cards-section">
  <div class="gift-card-text">Total Payments</div>
  <% sum = 0 %>
  <% @payments.each do |payment| %>
    <% sum = sum + payment.amount %>
  <% end %>
  <div class="gift-card-text"><%= "$#{sum}"%></div>
</div>

<div id="categories">
  <% @categories.order(created_at: :desc).each do |category| %>
    <%= render category %>
  <% end %>
</div>

<div class="add-category">
  <h1><%= link_to "NEW CATEGORY", new_category_path %></h1>
</div>
